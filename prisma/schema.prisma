generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServerOwner {
  id            Int      @default(autoincrement())
  serverOwnerId String   @id @unique
  name          String
  email         String   @unique
  password      String
  server        Server[]
}

model Server {
  id            Int            @default(autoincrement())
  serverId      String         @id @unique
  name          String         @unique
  banner        String[]
  image         String
  serverOwner   ServerOwner    @relation(fields: [serverOwnerId], references: [serverOwnerId])
  serverOwnerId String         @unique
  product       Product[]
  category      Category[]
  userOnServer  UserOnServer[]
}

model Product {
  id           Int       @default(autoincrement())
  productId    String    @id @unique
  name         String
  gameItemName String
  image        String
  price        Float
  server       Server    @relation(fields: [serverId], references: [serverId])
  serverId     String
  payment      Payment[]
  category     Category  @relation(fields: [categoryId], references: [categoryId])
  categoryId   String
}

model User {
  id           Int            @default(autoincrement())
  userId       String         @id @unique
  name         String
  email        String         @unique
  password     String
  userOnServer UserOnServer[]
  payment      Payment[]
  refreshToken RefreshToken?
}

model Payment {
  id        Int       @default(autoincrement())
  paymentId String    @id @unique
  date      DateTime
  amount    Int
  total     Int
  product   Product[]
  user      User      @relation(fields: [userId], references: [userId])
  userId    String
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  user      User   @relation(fields: [userId], references: [userId])
  userId    String @unique
}

model Category {
  id             Int       @default(autoincrement())
  categoryId     String    @id @unique
  functionInGame String
  name           String
  server         Server    @relation(fields: [serverId], references: [serverId])
  serverId       String
  product        Product[]
}

model UserOnServer {
  id             Int    @default(autoincrement())
  userOnServerId String @id @unique
  user           User   @relation(fields: [userId], references: [userId])
  userId         String
  server         Server @relation(fields: [serverId], references: [serverId])
  serverId       String
  gameUserId     String
  nickname       String

  @@unique([userId, serverId])
}
